set focuscontent
set scroll=20

""""""""""""""""""""
" Colemak Mappings "
""""""""""""""""""""

" Scroll down and up
noremap e 8j
noremap i 8k

" Page down and up
noremap <C-e> <C-f>
noremap <C-i> <C-b>

" Scroll left and right
noremap <C-n> 4h
noremap <C-o> 4l

noremap n ;;
noremap o ;c

noremap a i
noremap A I
noremap s a
noremap S A

" Switch Tabs
nnoremap N <C-p>
nnoremap O <C-n>

" Back/forward
nnoremap E H
nnoremap I L

" Find Next
nnoremap . n
" Find Previous
nnoremap , N

" U = Redo with U
noremap U <C-r>

"open
noremap h o

" Command
noremap H :

" Close window
noremap D d
" Unbind d from close window
noremap d <Nop>

" Alter URL
noremap <C-h> O

" Ctrl-/ to clear search highlighting
map <C-/> :nohlsearch<CR><ESC>

noremap d <C-[>
