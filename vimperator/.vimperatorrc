set focuscontent
set scroll=20
colorscheme solarized-dark

""""""""""""""""""""
" Colemak Mappings "
""""""""""""""""""""

" Scroll down and up
noremap e 8j
noremap i 8k

" Page down and up
noremap <C-e> <C-f>
noremap <C-i> <C-b>

" Scroll left and right
noremap <C-n> 4h
noremap <C-o> 4l

" Context menu's 
noremap o ;;
noremap T F

" tabgroups
noremap H :tabgroups 

noremap a i
noremap A I
noremap s a
noremap S A

" Switch Tabs
nnoremap I <C-p>
nnoremap E <C-n>

" Move tabs
map <C-S-n> :tabm -1<CR>
map <C-S-o> :tabm +1<CR>

" Back/forward
nnoremap N H
nnoremap O L

" Find Next
nnoremap . n
" Find Previous
nnoremap , N

" U = Redo with U
noremap U <C-r>

"open
noremap n o

" Command
noremap h :

" Close window
noremap D d
" Unbind d from close window
noremap d <Nop>

" Alter URL
noremap <C-h> O

" Ctrl-/ to clear search highlighting
map <C-/> :nohlsearch<CR><ESC>

" Work around for ESC not working in insert mode occasionally
noremap d <C-[>
