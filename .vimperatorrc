set scroll=20

""""""""""""""""""""
" Colemak Mappings "
""""""""""""""""""""
noremap n 4h
noremap e 4j
noremap i 4k
noremap o 4l

noremap a i
noremap A I
noremap s a
noremap S A

" Switch Tabs
nnoremap N <C-p>
nnoremap O <C-n>

" Back/forward
nnoremap E H
nnoremap I L

" Find Next
nnoremap <C-n> n
" Find Previous
nnoremap <C-o> N

" U = Redo with U
noremap U <C-r>

"open
noremap h o

" Command
noremap H :

" Close window
noremap D d
" Unbind d from close window
noremap d <Nop>

" Alter URL
noremap <C-h> O

" Ctrl-/ to clear search highlighting
map <C-/> o:nohlsearch<CR><ESC>

noremap <C-\'> ;c


